{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../dist/bundle",
    "paths": {
      "*": [
        "*"
      ],
      "components/*": [
        "components/*"
      ]
    },
    "typeRoots": [
      "./typings",
    ],
    "types": [
      "_global-types",
      "dom-not-standarted"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "target": "esnext",
    "lib": [
      "dom",
      "DOM.Iterable",
      "esnext",
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true,
        "exclude": [
          "**/node_modules/**"
        ]
      },
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./components/**/*.tsx",
    "./components/**/*.ts",
    "./components/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "app",
    "dist",
    "server",
    "__tests__",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ],
}