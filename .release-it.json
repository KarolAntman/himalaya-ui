{
    "git": {
      "commit": true,
      "commitMessage": "chore: release v${version}",
      "tag": true,
      "tagName": "v${version}",
      "push": true,
      "requireCleanWorkingDir": true,
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }
  
