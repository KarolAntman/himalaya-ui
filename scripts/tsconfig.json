{
  "compilerOptions": {
    "baseUrl": "../src",
    "outDir": "../dist/framework",
    "paths": {
      "*": [
        "*"
      ],
      "himalaya-ui": [
        "components/index.tsx"
      ],
      "components/*": [
        "components/*"
      ]
    },
    "typeRoots": [
      "../src/typings",
      "node_modules/@types"
    ],
    "types": [
      "_global-types",
      "dom-not-standarted"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": [
      "dom",
      "DOM.Iterable",
      "es2017",
      "es2016"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true,
        "exclude": [
          "**/node_modules/**"
        ]
      }
    ]
  },
  "files": [
    "../src/components/index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}